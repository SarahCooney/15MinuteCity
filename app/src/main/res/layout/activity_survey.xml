<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.SurveyActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="376dp"
        android:layout_height="87dp"
        android:text="Below are some optional survey, you can choose which one you want to answer. "
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="600dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/chooseAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="What is your age?"
                android:textSize="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.145" />

            <Spinner
                android:id="@+id/edu_spinner"
                android:layout_width="212dp"
                android:layout_height="43dp"
                android:autofillHints="What is Your Age?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseEdu"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/chooseEdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your educational level?"
                android:textSize="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.164"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age_spinner"
                app:layout_constraintVertical_bias="0.044" />

            <Spinner
                android:id="@+id/age_spinner"
                android:layout_width="212dp"
                android:layout_height="43dp"
                android:layout_marginBottom="512dp"
                android:autofillHints="What is Your Age?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseAge"
                app:layout_constraintVertical_bias="0.115" />


    <Spinner
        android:id="@+id/marr_spinner"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:autofillHints="What is Your Marriage Status?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseMarr"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chooseMarr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Your Marriage Status?"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edu_spinner"
        app:layout_constraintVertical_bias="0.06" />

    <Spinner
        android:id="@+id/em_spinner"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:autofillHints="What is Your Employment Status?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseEm"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chooseEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Your Employment Status?"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_spinner"
        app:layout_constraintVertical_bias="0.424" />

    <Spinner
        android:id="@+id/race_spinner"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:autofillHints="Please specify your ethnicity."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseRace"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chooseRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please specify your ethnicity."
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/em_spinner"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="SIGN UP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_spinner"
        app:layout_constraintVertical_bias="0.454" />

</androidx.constraintlayout.widget.ConstraintLayout>